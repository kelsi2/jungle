<header class="page-header">
  <h1>Login</h1>
</header>

<%= form_tag '/login', :class => 'form-group' do %>
  <div class="form-group">
    <%= label_tag "Email:" %> <abbr title="required">*</abbr>
    <%= text_field_tag :email, params[:email], placeholder: "user@domain.com", class: 'form-control', autofocus: true %>
  </div>
  
  <div class="form-group">
    <%= label_tag "Password:" %> <abbr title="required">*</abbr> 
    <%= password_field_tag :password, params[:password], placeholder: "Enter your password", class: 'form-control', autofocus: true %>
  </div>
  
  <div class="form-group">
    <%= submit_tag "Login", class: "btn btn-primary" %>
  </div>
<% end %>