<header class="page-header">
  <h1>Login</h1>
</header>

<%= simple_form_for :sessions do |f| %>

  <%= f.input :email, placeholder: "user@domain.com", error: "Please enter an email." %>
  <%= f.input :password, placeholder: "Enter your password", error: "Please enter a password." %>
  <%= f.button :submit, "Login" %>

<% end %>