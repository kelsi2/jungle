<header class="page-header">
  <h1>Login</h1>
</header>

<%= form_tag '/login', :class => 'form-inline' do %>
  <%= label_tag "Email:" %>
  <%= text_field_tag :email, params[:email], class: 'form-control', autofocus: true %>
  
  <%= label_tag "Password:" %> 
  <%= password_field_tag :password, params[:password], class: 'form-control', autofocus: true %>
  
  <%= submit_tag "Login", class: 'btn btn-default btn-lg btn-submit' %>
<% end %>